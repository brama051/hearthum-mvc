<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog 
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

	<changeSet id="20170301000000-2" author="vabramovic">
		<createSequence sequenceName="MARV_INV_ITEM_SEQ" />
	</changeSet>

    <changeSet id="20170301000000-3" author="vabramovic" dbms="postgresql">
    	<createTable tableName="INVENTORY_ITEM">
            <column name="ID" type="BIGINT" defaultValueComputed="nextval('MARV_INV_ITEM_SEQ')">
                <constraints nullable="false" primaryKey="true" primaryKeyName="INVENTORY_ITEM_PK" />
            </column>
            <column name="NAME" type="VARCHAR(80)">
                <constraints nullable="false" />
            </column>
            <column name="DESCRIPTION" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="QTY_UNIT" type="VARCHAR(80)">
                <constraints nullable="false" />
            </column>
            <column name="CATEGORY_ID" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="MANUFACTURER_NUMBER" type="VARCHAR(80)" />
            <column name="WARRANTY_NUMBER" type="VARCHAR(80)" />
            <column name="PURCHASE_DATE" type="DATETIME" />
            <column name="PRICE" type="NUMERIC(10,3)" />
            <column name="CURRENCY" type="VARCHAR(3)" />

            <column name="CREATED_BY" type="VARCHAR(80)" />
            <column name="MODIFIED_BY" type="VARCHAR(80)" />
            <column name="CREATED_AT" type="TIMESTAMP" />
            <column name="MODIFIED_AT" type="TIMESTAMP" />
            <column name="INVENTORY_NUMBER" type="BIGINT">
                <constraints nullable="false" unique="true" />
           </column>
        </createTable>
    </changeSet>

    <changeSet id="20170301000000-4" author="vabramovic" dbms="postgresql">
        <addForeignKeyConstraint baseColumnNames="CATEGORY_ID"
            baseTableName="INVENTORY_ITEM" constraintName="CATEGORY_FK"
            referencedColumnNames="ID" referencedTableName="CATEGORY"/>
    </changeSet>
</databaseChangeLog>